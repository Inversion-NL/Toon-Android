<resources>

    <style name="style_card_Temperature">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_btn_Mode">
        <item name="android:background">@drawable/btn_toggle_selector</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:layout_width">@dimen/_108sdp</item>
        <item name="android:layout_height">@dimen/_70sdp</item>
    </style>

    <style name="style_btn_changeTemp" parent="style_btn_Mode">
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorTextChangeTemp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="style_card_PowerGas">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/_145sdp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="style_card_TotalPowerGas">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/_145sdp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="style_img_meter">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">89dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="style_txtv_powerGasTitle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_txtv_PowerGasDescription">
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
