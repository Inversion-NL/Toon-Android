<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btnMode">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="btnChangeTemp" parent="btnMode">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/colorTextChangeTemp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="cardPowerGas">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="txtvPowerGasTitle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="txtvPowerGasDescription">
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
